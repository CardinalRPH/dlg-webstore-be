generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  isVerif   Boolean  @default(false)
  password  String
  birthDate DateTime

  balance Int @default(1000000)

  phone     String   @unique
  joinDate  DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders         Order[]
  payments       Payment[]
  balanceHistory BalanceHistory[]
  cart           Cart?
}

model OTP {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  isUsed    Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductCategory {
  COFFEE
  ACCESSORY
}

model Product {
  id          String  @id @default(cuid())
  name        String
  price       Int
  imageUrl    String?
  description String?

  rating      Float @default(0)
  reviewCount Int   @default(0)

  category ProductCategory @default(COFFEE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  coffeeDetail    CoffeeDetail?
  accessoryDetail AccessoryDetail?
  orderItems      OrderItem[]
  cartItems       CartItem[]
}

model CoffeeDetail {
  id        String  @id @default(cuid())
  productId String  @unique
  product   Product @relation(fields: [productId], references: [id])

  notes           Json // string[] disimpan sebagai JSON
  origin          String
  weight          String
  roastLevel      RoastLevel
  availableGrinds Json
}

enum RoastLevel {
  Light
  Medium
  Dark
}

model AccessoryDetail {
  id        String  @id @default(cuid())
  productId String  @unique
  product   Product @relation(fields: [productId], references: [id])

  material String
  features Json
  specs    Json // karena dynamic key-value
}

model Cart {
  id     String     @id @default(cuid())
  userId String     @unique
  user   User       @relation(fields: [userId], references: [id])
  items  CartItem[]
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  productId String
  name      String
  price     Int
  imageUrl  String?
  quantity  Int     @default(1)
  variant   String? // example: “Medium Grind” or “Black Color”

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Order {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  date       DateTime    @default(now())
  status     OrderStatus @default(PYMT_PDG)
  nextStatus OrderStatus @default(PYMT_SCS)

  approvalExpiredAt DateTime // ⏰ deadline 1 hari
  approvedAt        DateTime?
  cancelledAt       DateTime?

  subtotal     Int
  shippingCost Int
  totalAmount  Int

  items    OrderItem[]
  invoice  Invoice?
  shipping Shipping?
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String

  name     String
  price    Int // unit price
  quantity Int
  variant  String? // optional variant

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Invoice {
  id      String @id @default(cuid())
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id])

  invoiceDate     DateTime @default(now())
  dueDate         DateTime
  customerName    String
  customerEmail   String
  billingAddress  String
  shippingAddress String

  subtotal     Int
  shippingCost Int
  taxRate      Float
  taxAmount    Int
  totalAmount  Int

  items InvoiceItem[]
}

model InvoiceItem {
  id        String  @id @default(cuid())
  invoiceId String
  name      String
  quantity  Int
  price     Int // unit price
  variant   String?

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
}

enum OrderStatus {
  PYMT_PDG // ORDER_STATUS = PENDING
  PYMT_CNC // ORDER_STATUS = CANCELLED
  PYMT_SCS // ORDER_STATUS = PROCESS

  SHIP_PDG // ORDER_STATUS = WAITING_SHIPMENT
  SHIP_SHP // ORDER_STATUS = SHIPPED
  SHIP_DLV // ORDER_STATUS = COMPLETED

  ORDR_CNC // ORDER_STATUS = CANCELLED
}

enum ShippingStatus {
  PENDING
  SHIPPED
  DELIVERED
}

enum PaymentMethod {
  BANK_TRANSFER
  CREDIT_CARD
  E_WALLET
  COD
}

model PaymentService {
  id          String  @id @default(cuid())
  code        String  @unique // MIDTRANS_GOPAY
  name        String // GoPay
  provider    String // Midtrans, Xendit
  description String?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[]
}

model ShippingService {
  id                    String  @id @default(cuid())
  code                  String  @unique // JNE_REG
  courier               String // JNE
  service               String // REG
  description           String?
  estimatedDeliveryDays Int

  baseCost Int
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shippings Shipping[]
}

model Payment {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  paymentServiceId String
  paymentService   PaymentService @relation(fields: [paymentServiceId], references: [id])

  amount Int
  status PaymentStatus @default(PENDING)

  paidBefore DateTime
  paidAt     DateTime?

  transactionId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shipping {
  id      String @id @default(cuid())
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id])

  shippingServiceId String
  shippingService   ShippingService @relation(fields: [shippingServiceId], references: [id])

  receiverName String
  phone        String
  address      String

  estimatedDelivery DateTime

  shippingCost   Int
  trackingNumber String?
  status         ShippingStatus @default(PENDING)

  shippedAt   DateTime?
  deliveredAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BalanceHistory {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  type   BalanceHistoryType
  amount Int

  balanceBefore Int
  balanceAfter  Int

  referenceType BalanceReferenceType
  referenceId   String?

  description String?

  createdAt DateTime @default(now())
}

enum BalanceHistoryType {
  TOPUP
  PURCHASE
  REFUND
  ADJUSTMENT
}

enum BalanceReferenceType {
  PAYMENT
  ORDER
  SYSTEM
}
