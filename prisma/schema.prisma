generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  isVerif   Boolean  @default(false)
  password  String
  birthDate DateTime
  phone     String   @unique
  joinDate  DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
  cart   Cart?
}

model OTP {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  isUsed    Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductCategory {
  COFFEE
  ACCESSORY
}

model Product {
  id          String  @id @default(cuid())
  name        String
  price       Int
  imageUrl    String?
  description String?

  rating      Float @default(0)
  reviewCount Int   @default(0)

  category ProductCategory @default(COFFEE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  coffeeDetail    CoffeeDetail?
  accessoryDetail AccessoryDetail?
  orderItems      OrderItem[]
  cartItems       CartItem[]
}

model CoffeeDetail {
  id        String  @id @default(cuid())
  productId String  @unique
  product   Product @relation(fields: [productId], references: [id])

  notes           Json // string[] disimpan sebagai JSON
  origin          String
  weight          String
  roastLevel      RoastLevel
  availableGrinds Json
}

enum RoastLevel {
  Light
  Medium
  Dark
}

model AccessoryDetail {
  id        String  @id @default(cuid())
  productId String  @unique
  product   Product @relation(fields: [productId], references: [id])

  material String
  features Json
  specs    Json // karena dynamic key-value
}

model Cart {
  id     String     @id @default(cuid())
  userId String     @unique
  user   User       @relation(fields: [userId], references: [id])
  items  CartItem[]
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  productId String
  name      String
  price     Int
  imageUrl  String?
  quantity  Int     @default(1)
  variant   String? // example: “Medium Grind” or “Black Color”

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Order {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  date   DateTime    @default(now())
  status OrderStatus @default(PENDING)

  subtotal     Int
  shippingCost Int
  totalAmount  Int

  items   OrderItem[]
  invoice Invoice?

  // TRANSACTION TABLES
  payment  Payment?
  shipping Shipping?
}

enum OrderStatus {
  PENDING
  PROCESS
  SHIPPED
  COMPLETED
  CANCELLED
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String

  name     String
  price    Int // unit price
  quantity Int
  variant  String? // optional variant

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Invoice {
  id      String @id @default(cuid())
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id])

  invoiceDate     DateTime @default(now())
  dueDate         DateTime
  customerName    String
  customerEmail   String
  billingAddress  String
  shippingAddress String

  subtotal      Int
  shippingCost  Int
  taxRate       Float
  taxAmount     Int
  totalAmount   Int
  paymentMethod String

  items InvoiceItem[]
}

model InvoiceItem {
  id        String  @id @default(cuid())
  invoiceId String
  name      String
  quantity  Int
  price     Int // unit price
  variant   String?

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
  REFUNDED
}

enum PaymentMethod {
  BANK_TRANSFER
  CREDIT_CARD
  E_WALLET
  COD
}

enum ShippingStatus {
  PENDING
  READY
  SHIPPED
  DELIVERED
  RETURNED
}

model PaymentService {
  id          String  @id @default(cuid())
  code        String  @unique // MIDTRANS_GOPAY
  name        String // GoPay
  provider    String // Midtrans, Xendit
  description String?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[]
}

model ShippingService {
  id          String  @id @default(cuid())
  code        String  @unique // JNE_REG
  courier     String // JNE
  service     String // REG
  description String?

  baseCost Int
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shippings Shipping[]
}

model Payment {
  id      String @id @default(cuid())
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id])

  paymentServiceId String
  paymentService   PaymentService @relation(fields: [paymentServiceId], references: [id])

  amount Int
  status PaymentStatus @default(PENDING)

  // Gateway info
  transactionId String?
  paymentUrl    String?
  paidAt        DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shipping {
  id      String @id @default(cuid())
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id])

  shippingServiceId String
  shippingService   ShippingService @relation(fields: [shippingServiceId], references: [id])

  receiverName String
  phone        String
  address      String

  shippingCost   Int
  trackingNumber String?
  status         ShippingStatus @default(PENDING)

  shippedAt   DateTime?
  deliveredAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
